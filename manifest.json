{
  "manifest_version": 3,
  "name": "Enrichmatic LI Cookies",
  "version": "1.0",
  "description": "Extract LinkedIn cookies for use with Enrichmatic",
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
